# LibreClinica API - Production Environment Configuration
# Copy this file to .env.production and update with your actual values

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
NODE_ENV=production
PORT=3000
API_BASE_URL=https://api.yourdomain.com

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
LIBRECLINICA_DB_HOST=localhost
LIBRECLINICA_DB_PORT=5432
LIBRECLINICA_DB_NAME=libreclinica_prod
LIBRECLINICA_DB_USER=clinica
LIBRECLINICA_DB_PASSWORD=CHANGE_THIS_PASSWORD
LIBRECLINICA_DB_SSL=false
LIBRECLINICA_DB_POOL_MIN=2
LIBRECLINICA_DB_POOL_MAX=10

# ============================================================================
# JWT CONFIGURATION
# ============================================================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=CHANGE_THIS_TO_A_RANDOM_32_CHAR_STRING
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=CHANGE_THIS_TO_ANOTHER_RANDOM_32_CHAR_STRING
JWT_REFRESH_EXPIRES_IN=7d

# ============================================================================
# LIBRECLINICA SOAP CONFIGURATION
# ============================================================================
SOAP_URL=https://your-libreclinica-instance.com/OpenClinica-ws/ws
SOAP_USERNAME=your_soap_username
SOAP_PASSWORD=your_soap_password
SOAP_TIMEOUT=30000

# ============================================================================
# REDIS CONFIGURATION (Optional - for caching)
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET=CHANGE_THIS_TO_A_RANDOM_SECRET

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
# Comma-separated list of allowed origins
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com
CORS_CREDENTIALS=true

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=info
LOG_FILE=/var/log/libreclinica/api.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7

# ============================================================================
# EMAIL CONFIGURATION (Optional - for notifications)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourdomain.com

# ============================================================================
# FIREBASE CONFIGURATION (Optional - for push notifications)
# ============================================================================
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_CLIENT_EMAIL=your-client-email

# ============================================================================
# CLOUD STORAGE CONFIGURATION (Optional - for file uploads)
# ============================================================================
# AWS S3
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_BUCKET=your-bucket-name

# Or Google Cloud Storage
GCS_PROJECT_ID=your-project-id
GCS_BUCKET=your-bucket-name
GCS_KEYFILE=/path/to/keyfile.json

# ============================================================================
# MONITORING CONFIGURATION (Optional)
# ============================================================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_API_DOCS=false
ENABLE_METRICS=true
ENABLE_AUDIT_LOG=true
ENABLE_RATE_LIMITING=true

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7
BACKUP_S3_BUCKET=your-backup-bucket

# ============================================================================
# PERFORMANCE CONFIGURATION
# ============================================================================
CACHE_ENABLED=true
CACHE_TTL=3600
COMPRESSION_ENABLED=true
COMPRESSION_THRESHOLD=1024

# ============================================================================
# COMPLIANCE CONFIGURATION
# ============================================================================
HIPAA_MODE=true
AUDIT_ALL_REQUESTS=true
DATA_RETENTION_DAYS=2555
ENCRYPTION_AT_REST=true

# ============================================================================
# NOTES
# ============================================================================
# 1. Never commit this file with real values to version control
# 2. Store sensitive values in a secure vault (e.g., AWS Secrets Manager)
# 3. Use strong, unique passwords for all services
# 4. Rotate secrets regularly (every 90 days recommended)
# 5. Enable 2FA for all service accounts
# 6. Monitor logs for suspicious activity
# 7. Keep dependencies updated
# 8. Regular security audits
